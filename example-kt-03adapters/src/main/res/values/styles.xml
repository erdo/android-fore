<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/smallButton</item>
    </style>

    <style name="smallButton" parent="@android:style/Widget.Button">
        <item name="android:minWidth">@dimen/button_min_width</item>
        <item name="android:layout_margin">@dimen/common_space_small</item>
        <item name="android:padding">@dimen/common_space_small</item>
        <item name="android:textColor">@drawable/button_text_selector</item>
    </style>

</resources>
