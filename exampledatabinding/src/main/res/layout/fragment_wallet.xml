<?xml version="1.0" encoding="utf-8"?>
<foo.bar.example.asafdatabinding.ui.wallet.WalletsView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="Mobile Wallet" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/wallet_increase_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:text="+" />

            <Button
                android:id="@+id/wallet_decrease_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="-" />

        </LinearLayout>

        <TextView
            android:id="@+id/wallet_mobileamount_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="Savings Wallet" />

        <TextView
            android:id="@+id/wallet_savingsamount_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="$10" />

    </LinearLayout>

</foo.bar.example.asafdatabinding.ui.wallet.WalletsView>