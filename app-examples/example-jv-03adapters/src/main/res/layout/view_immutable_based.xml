<?xml version="1.0" encoding="utf-8"?>
<foo.bar.example.foreadapters.ui.playlist.immutable.ImmutableListView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="0px"
    android:layout_height="match_parent"
    android:layout_weight="50"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/playlist_title1_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:text="Playlist Adapter\nImmutable List" />

    <TextView
        android:id="@+id/playlist_totaltracks1_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:layout_toEndOf="@+id/playlist_title1_textview"
        android:layout_toRightOf="@+id/playlist_title1_textview"
        android:text="0" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/playlist_list1_recycleview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/playlist_buttoncontainer1_linear"
        android:layout_below="@+id/playlist_title1_textview"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:background="@color/colorAccent" />

    <LinearLayout
        android:id="@+id/playlist_buttoncontainer1_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/playlist_add1_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Add Track\nImmutable" />

            <Button
                android:id="@+id/playlist_clear1_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Clear\nTracks" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/playlist_addMany1_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="+ 5" />

            <Button
                android:id="@+id/playlist_removeMany1_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="- 5" />

        </LinearLayout>

    </LinearLayout>

</foo.bar.example.foreadapters.ui.playlist.immutable.ImmutableListView>
